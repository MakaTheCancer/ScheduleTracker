<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Colors-->
    <Color x:Key="Beige">#F5F5DC</Color>
    
    <!--Brushes-->
    <SolidColorBrush x:Key="BrushBeige" Color="{StaticResource Beige}" />
    
    <!--Styles-->
    <Style x:Key="LightBottomShadowButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#DDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
                    Color="#44000000"
                    Direction="270"
                    ShadowDepth="2"        
                    BlurRadius="3"         
                    Opacity="0.2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LightBottomShadowRectangleStyle" TargetType="Rectangle">
        <Setter Property="RadiusX" Value="10"/>
        <Setter Property="RadiusY" Value="10"/>
        <Setter Property="Fill" Value="White"/>
        <Setter Property="Stroke" Value="#DDD"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
                    Color="#44000000"
                    Direction="270"
                    ShadowDepth="2"
                    BlurRadius="3"
                    Opacity="0.2"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>