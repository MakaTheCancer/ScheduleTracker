<UserControl x:Class="ScheduleTracker.WPF.Controls.SignUpNav"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScheduleTracker.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Rectangle Width="550" Height="350"
                   Style="{StaticResource LightBottomShadowRectangleStyle}"
           Fill="White"
           RadiusX="20" RadiusY="20"/>
            <Image Source="/Assets/DailyRoutineTrackerAndReminderIcon.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Height="132" Width="132"/>
            <TextBox x:Name="EmailTextBox" HorizontalAlignment="Center" Margin="0,248,0,0" TextWrapping="Wrap" Text="Email Address" VerticalAlignment="Top" Width="204" PreviewMouseLeftButtonDown="EmailTextBox_PreviewMouseLeftButtonDown"/>
            <TextBox x:Name="passwordtext" HorizontalAlignment="Center" Margin="0,271,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="204" PreviewMouseLeftButtonDown="passwordtext_PreviewMouseLeftButtonDown"/>
            <Button x:Name="Register" Content="Register" HorizontalAlignment="Center" Margin="0,314,0,0" VerticalAlignment="Top" Width="388" Click="Register_Click" Command="{Binding LoginCommand}"/>
            <TextBox x:Name="Username" HorizontalAlignment="Center" Margin="0,225,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="204" PreviewMouseLeftButtonDown="Username_PreviewMouseLeftButtonDown"/>
            <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Margin="542,339,0,0" VerticalAlignment="Top" Width="52" Click="Back_Click"/>


        </Grid>
    </Grid>
</UserControl>
