<UserControl x:Class="ScheduleTracker.WPF.Controls.LogInNav"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScheduleTracker.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Width="550" Height="350"
                   Style="{StaticResource LightBottomShadowRectangleStyle}"
           Fill="White"
           RadiusX="20" RadiusY="20"/>
        <Image Source="/Assets/DailyRoutineTrackerAndReminderIcon.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Height="132" Width="132"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="301,225,0,0" TextWrapping="Wrap" Text="Email Address" VerticalAlignment="Top" Width="205" PreviewMouseLeftButtonDown="EmailTextBox_PreviewMouseLeftButtonDown"/>
        <TextBox x:Name="passwordtext" HorizontalAlignment="Left" Margin="301,258,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="205" PreviewMouseLeftButtonDown="passwordtext_PreviewMouseLeftButtonDown"/>
        <Button Content="Log In" HorizontalAlignment="Left" Margin="199,306,0,0" VerticalAlignment="Top" Width="388" Click="LoginButton_Click" />
        <Button x:Name="Register" Content="Register" HorizontalAlignment="Left" Margin="199,331,0,0" VerticalAlignment="Top" Click="Register_Click" Width="388"/>


    </Grid>
</UserControl>
